extends ../layout

block content
  h1= title

  if errors !== undefined
    each msg in errors.errors
      p(class="red")=msg

  form(method="post")
    p
      label Tytuł wpisu
      br
      input(type="text" name="title" value=body.title || '')
    p
      label Treść
      br
      textarea(name="description", cols="30", rows="10")=body.description || ''
    p
      input(type="submit" value="Opublikuj")